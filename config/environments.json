{
  "environments": {
    "dev": {
      "resourceGroupName": "rg-appgateway-dev",
      "appGatewayName": "agw-dev",
      "subscriptionId": "your-dev-subscription-id",
      "maintenance": {
        "redirectURL": "https://www.google.com",
        "routingRules": [
          "rule-api",
          "rule-web"
        ]
      },
      "normal": {
        "routingRules": [
          {
            "ruleName": "rule-api",
            "backendPoolName": "api-backend-pool",
            "backendSettings": "api-backend-settings"
          },
          {
            "ruleName": "rule-web",
            "backendPoolName": "web-backend-pool",
            "backendSettings": "web-backend-settings"
          }
        ]
      }
    },
